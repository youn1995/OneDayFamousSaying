<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.effect.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>

<BorderPane id="GridPane" prefHeight="270.0" prefWidth="400.0" stylesheets="@login.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <Label blendMode="MULTIPLY" style="-fx-background-color: black;" text="OneDayFamousSaying" textFill="WHITE" BorderPane.alignment="CENTER">
         <font>
            <Font size="30.0" />
         </font></Label>
   </top>
   
   <center>
      <GridPane alignment="CENTER" hgap="10.0" prefHeight="10.0" prefWidth="270.0" vgap="10.0" BorderPane.alignment="CENTER">
      <padding>
      <Insets topRightBottomLeft="10.0" />
      </padding>
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label alignment="CENTER_RIGHT" contentDisplay="RIGHT" prefHeight="15.0" prefWidth="132.0" text="아이디" textFill="#232425" />
            <Label alignment="CENTER_RIGHT" contentDisplay="CENTER" prefHeight="15.0" prefWidth="134.0" text="비밀번호" textFill="#110f0f" GridPane.rowIndex="1">
               <effect>
                  <Lighting>
                     <bumpInput>
                        <Shadow />
                     </bumpInput>
                     <light>
                        <Light.Distant />
                     </light>
                  </Lighting>
               </effect></Label>
            <TextField fx:id="idField" alignment="CENTER" GridPane.columnIndex="1" />
            <PasswordField fx:id="passwordField" alignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <HBox alignment="CENTER" spacing="20.0" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.hgrow="ALWAYS" GridPane.rowIndex="2">
            <children> 
            <Button id="btn-effect" fx:id="loginButton" mnemonicParsing="false" text="로그인" GridPane.rowIndex="2" />
            <Button id="btn-effect" fx:id="signupButton" mnemonicParsing="false" text="회원가입" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            </children>
            </HBox>
         </children>
      </GridPane>
   </center>
</BorderPane>
